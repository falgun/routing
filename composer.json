{
    "name": "falgunphp/routing",
    "type": "library",
    "homepage": "https://github.com/falgun/routing",
    "license": "MIT",
    "authors": [
        {
            "name": "S.M. Ataur Rahman",
            "email": "dev.ataur.rahman@gmail.com",
            "homepage": "https://ataur.net/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Falgun\\Routing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Falgun\\Routing\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "slevomat/coding-standard": "~6.0",
        "phpstan/phpstan": "^0.12.18",
        "vimeo/psalm": "^3.11",
        "phpunit/phpunit": "^9.1"
    },
    "scripts": {
        "phpunit": "phpunit --verbose --colors=always",
        "phpcs": "phpcs src/",
        "psalm": "psalm --show-info=true",
        "phpstan": "phpstan analyze src/ --level max"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
